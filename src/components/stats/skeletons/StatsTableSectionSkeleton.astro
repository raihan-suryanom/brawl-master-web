---
// Stats Table Skeleton
---
<div class="rounded-lg border overflow-hidden">
  <div class="animate-pulse">
    <!-- Table Header -->
    <div class="bg-muted/50 border-b">
      <div class="grid grid-cols-9 gap-4 p-4">
        <div class="h-4 w-8 bg-muted rounded"></div>
        <div class="h-4 w-16 bg-muted rounded"></div>
        <div class="h-4 w-12 bg-muted rounded"></div>
        <div class="h-4 w-8 bg-muted rounded"></div>
        <div class="h-4 w-8 bg-muted rounded"></div>
        <div class="h-4 w-12 bg-muted rounded"></div>
        <div class="h-4 w-12 bg-muted rounded"></div>
        <div class="h-4 w-12 bg-muted rounded"></div>
        <div class="h-4 w-20 bg-muted rounded"></div>
      </div>
    </div>

    <!-- Table Rows -->
    <div class="divide-y">
      {[1, 2, 3, 4, 5, 6, 7, 8].map(() => (
        <div class="grid grid-cols-9 gap-4 p-4 items-center">
          <!-- Rank -->
          <div class="h-6 w-8 bg-muted rounded"></div>
          
          <!-- Player (avatar + name) -->
          <div class="flex items-center gap-3">
            <div class="w-3 h-3 rounded-full bg-muted"></div>
            <div class="w-8 h-8 rounded-full bg-muted"></div>
            <div class="h-4 w-24 bg-muted rounded"></div>
          </div>
          
          <!-- Stats columns -->
          <div class="h-4 w-8 bg-muted rounded"></div>
          <div class="h-4 w-8 bg-muted rounded"></div>
          <div class="h-4 w-8 bg-muted rounded"></div>
          <div class="h-4 w-8 bg-muted rounded"></div>
          <div class="h-4 w-8 bg-muted rounded"></div>
          <div class="h-6 w-12 bg-muted rounded"></div>
          
          <!-- Last 5 -->
          <div class="flex gap-1 justify-center">
            {[1, 2, 3, 4, 5].map(() => (
              <div class="w-7 h-7 rounded-full bg-muted"></div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
