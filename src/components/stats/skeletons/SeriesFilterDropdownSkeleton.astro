---
import { Card, CardContent, CardHeader } from "@/components/ui/card";
---

<!-- Page Header Skeleton -->
<>
  <div class="flex items-center justify-between mb-6 animate-pulse">
    <div class="space-y-2">
      <div class="h-10 w-48 bg-muted rounded"></div>
      <div class="h-4 w-64 bg-muted rounded"></div>
    </div>
  </div>

  <!-- Series Filter Skeleton -->
  <Card>
    <CardHeader>
      <div class="space-y-2 animate-pulse">
        <div class="h-6 w-40 bg-muted rounded"></div>
        <div class="h-4 w-80 bg-muted rounded"></div>
      </div>
    </CardHeader>
    <CardContent>
      <div class="flex gap-4 items-end animate-pulse">
        <div class="flex-1 max-w-md space-y-2">
          <div class="h-4 w-24 bg-muted rounded"></div>
          <div class="h-10 w-full bg-muted rounded"></div>
        </div>
        <div class="h-10 w-32 bg-muted rounded"></div>
      </div>
    </CardContent>
  </Card>
</>