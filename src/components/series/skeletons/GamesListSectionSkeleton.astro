---
import { Card, CardContent, CardHeader } from "@/components/ui/card";
---

<Card>
  <CardHeader>
    <div class="space-y-2 animate-pulse">
      <div class="h-6 w-24 bg-muted rounded"></div>
      <div class="h-4 w-32 bg-muted rounded"></div>
    </div>
  </CardHeader>
  <CardContent>
    <div class="space-y-4">
      {[1, 2, 3, 4, 5].map(() => (
        <div class="border rounded-lg p-4 animate-pulse">
          <div class="flex items-center justify-between mb-3">
            <div class="h-4 w-16 bg-muted rounded"></div>
            <div class="h-3 w-24 bg-muted rounded"></div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="p-3 rounded bg-muted/50">
              <div class="h-4 w-20 bg-muted rounded mb-2"></div>
              <div class="space-y-1">
                {[1, 2, 3, 4].map(() => (
                  <div class="flex items-center gap-2">
                    <div class="w-2 h-2 rounded-full bg-muted"></div>
                    <div class="w-6 h-6 rounded-full bg-muted"></div>
                    <div class="h-3 w-16 bg-muted rounded"></div>
                  </div>
                ))}
              </div>
            </div>
            <div class="p-3 rounded bg-muted/50">
              <div class="h-4 w-20 bg-muted rounded mb-2"></div>
              <div class="space-y-1">
                {[1, 2, 3, 4].map(() => (
                  <div class="flex items-center gap-2">
                    <div class="w-2 h-2 rounded-full bg-muted"></div>
                    <div class="w-6 h-6 rounded-full bg-muted"></div>
                    <div class="h-3 w-16 bg-muted rounded"></div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </CardContent>
</Card>
