---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
---
<Card>
  <CardHeader>
    <div class="space-y-2 animate-pulse">
      <div class="h-6 w-48 bg-muted rounded"></div>
      <div class="h-4 w-72 bg-muted rounded"></div>
    </div>
  </CardHeader>
  <CardContent>
    <div class="flex flex-wrap gap-4 items-end animate-pulse">
      <div class="flex-1 min-w-[200px] space-y-2">
        <div class="h-4 w-24 bg-muted rounded"></div>
        <div class="h-10 w-full bg-muted rounded"></div>
      </div>
      <div class="flex-1 min-w-[200px] space-y-2">
        <div class="h-4 w-24 bg-muted rounded"></div>
        <div class="h-10 w-full bg-muted rounded"></div>
      </div>
      <div class="h-10 w-32 bg-muted rounded"></div>
    </div>
  </CardContent>
</Card>
