---
import { Card, CardContent, CardHeader } from "@/components/ui/card";
---

<Card>
  <CardHeader>
    <div class="space-y-2 animate-pulse">
      <div class="h-6 w-40 bg-muted rounded"></div>
      <div class="h-4 w-64 bg-muted rounded"></div>
    </div>
  </CardHeader>
  <CardContent>
    <div class="h-[300px] flex items-end gap-1 px-4 animate-pulse">
      <!-- Simulated line chart with dots -->
      {[20, 35, 30, 45, 40, 55, 50, 65, 60, 75, 70, 85, 80, 90, 95].map((height) => (
        <div class="flex-1 flex flex-col items-center justify-end">
          <div class="w-2 h-2 rounded-full bg-muted mb-1"></div>
          <div class="w-0.5 bg-muted" style={`height: ${height}%`}></div>
        </div>
      ))}
    </div>
  </CardContent>
</Card>
