---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
---
<Card>
  <CardHeader>
    <div class="space-y-2 animate-pulse">
      <div class="h-6 w-48 bg-muted rounded"></div>
      <div class="h-4 w-64 bg-muted rounded"></div>
    </div>
  </CardHeader>
  <CardContent>
    <div class="animate-pulse">
      <!-- Pentagon shape skeleton -->
      <div class="relative flex items-center justify-center h-[450px]">
        <div class="w-full max-w-md aspect-square bg-muted rounded-full opacity-20"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="grid grid-cols-3 gap-4 w-full max-w-xs">
            <div class="h-4 w-20 bg-muted rounded mx-auto"></div>
            <div class="h-4 w-20 bg-muted rounded mx-auto"></div>
            <div class="h-4 w-20 bg-muted rounded mx-auto"></div>
            <div class="h-4 w-20 bg-muted rounded mx-auto"></div>
            <div class="h-4 w-20 bg-muted rounded mx-auto"></div>
            <div class="h-4 w-20 bg-muted rounded mx-auto"></div>
          </div>
        </div>
      </div>
    </div>
  </CardContent>
</Card>
