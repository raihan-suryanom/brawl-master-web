---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { api, type Series, type Player, type PlayerStats } from "@/lib/api";

const series = await api.getSeries() as Series[];

// Get seriesId from query params
const url = new URL(Astro.request.url);
const selectedSeriesId = url.searchParams.get("seriesId");

let stats: PlayerStats[] = [];
let selectedSeries: Series | null = null;

if (selectedSeriesId) {
  selectedSeries = series.find((s) => s._id === selectedSeriesId) || null;
  stats = await api.getSeriesStats(selectedSeriesId) as PlayerStats[];
} else {
  // Aggregate stats from all series
  const allPlayers = await api.getPlayers() as Player[];
  const allStats = await Promise.all(
    allPlayers.map((player) => api.getPlayerStats(player._id))
  ) as PlayerStats[];
  stats = allStats.sort((a, b) => b.pts - a.pts);
}
---

<Layout title="Overall Stats - Brawl Master Tracker">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-bold">Overall Stats</h1>
        <p class="text-muted-foreground">
          {selectedSeries ? `Stats for ${selectedSeries.name}` : "Aggregate stats across all series"}
        </p>
      </div>
    </div>

    <!-- Series Filter (Client-side navigation) -->
    <Card>
      <CardHeader>
        <CardTitle>Filter by Series</CardTitle>
        <CardDescription>View stats for a specific series or all series combined</CardDescription>
      </CardHeader>
      <CardContent>
        <form method="get" action="/stats" class="flex gap-4 items-end">
          <div class="flex-1 max-w-md">
            <label for="seriesId" class="block text-sm font-medium mb-2">
              Select Series
            </label>
            <select
              id="seriesId"
              name="seriesId"
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
            >
              <option value="">All Series</option>
              {series.map((s) => (
                <option value={s._id} selected={selectedSeriesId === s._id}>
                  {s.name}
                </option>
              ))}
            </select>
          </div>
          <button
            type="submit"
            class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
          >
            Apply Filter
          </button>
        </form>
      </CardContent>
    </Card>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {stats.map((stat, index) => (
        <a href={`/players/${stat.playerId}`}>
          <Card className="hover:border-primary transition-colors cursor-pointer">
            <CardHeader>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <span class="text-2xl font-bold text-muted-foreground">#{index + 1}</span>
                  <img
                    src={stat.picture}
                    alt={stat.name}
                    class="w-12 h-12 rounded-full object-cover"
                  />
                  <div>
                    <CardTitle>{stat.name}</CardTitle>
                    <CardDescription>{stat.pts} pts</CardDescription>
                  </div>
                </div>
                <div
                  class="w-4 h-4 rounded-full"
                  style={`background-color: ${stat.color}`}
                />
              </div>
            </CardHeader>
            <CardContent>
              <div class="grid grid-cols-3 gap-4 text-center">
                <div>
                  <div class="text-2xl font-bold">{stat.totalWin}</div>
                  <div class="text-xs text-muted-foreground">Wins</div>
                </div>
                <div>
                  <div class="text-2xl font-bold text-green-600">{stat.highestWinStreak}</div>
                  <div class="text-xs text-muted-foreground">WS</div>
                </div>
                <div>
                  <div class="text-2xl font-bold text-red-600">{stat.highestLoseStreak}</div>
                  <div class="text-xs text-muted-foreground">LS</div>
                </div>
              </div>
              <div class="mt-4 pt-4 border-t">
                <div class="flex justify-between text-sm">
                  <span class="text-muted-foreground">Win Rate</span>
                  <span class="font-medium">{stat.winRate.toFixed(1)}%</span>
                </div>
                <div class="flex justify-between text-sm mt-1">
                  <span class="text-muted-foreground">Total Games</span>
                  <span class="font-medium">{stat.totalGames}</span>
                </div>
              </div>
            </CardContent>
          </Card>
        </a>
      ))}
    </div>
  </div>
</Layout>